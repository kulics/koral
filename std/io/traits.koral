// ============================================================================
// std.io - IO Traits
// ============================================================================
// Core IO trait definitions: Reader, Writer, Seeker, ReadWriter.
// Reader/Writer use UInt8 list + range as the canonical bytes API.
// ============================================================================

public trait Reader {
    read(self, dst [UInt8]List ref, range [UInt]Range) [UInt]Result
}

public trait Writer {
    write(self, src [UInt8]List, range [UInt]Range) [UInt]Result
    flush(self) [Void]Result
}

public trait Seeker {
    seek(self, pos SeekPos) [UInt64]Result
}
