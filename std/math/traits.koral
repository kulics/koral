// ============================================================================
// std.math - Trait Definitions
// ============================================================================

public trait Numeric Sub and Mul and Ord and Hashable {
    // 绝对值
    abs(self) Self
}

public trait FloatingPoint Numeric and Div {
    // 幂与根
    sqrt(x Self) Self
    cbrt(x Self) Self
    pow(self, exp Self) Self
    hypot(x Self, y Self) Self

    // 基础对数
    ln(x Self) Self
    log2(x Self) Self
    log10(x Self) Self

    // 取整
    floor(self) Self
    ceil(self) Self
    round(self) Self
    trunc(self) Self
    signum(self) Self
    fract(self) Self
    copysign(self, sign Self) Self
    fmod(self, y Self) Self

    // 数学常量
    pi() Self
    e() Self
    tau() Self
    ln2() Self
    ln10() Self
    sqrt2() Self
}

public trait FloatExpLog FloatingPoint {
    exp(x Self) Self
    exp2(x Self) Self
    exp_m1(x Self) Self
    ln_1p(x Self) Self
}

public trait FloatTrigHyper FloatingPoint {
    sin(x Self) Self
    cos(x Self) Self
    tan(x Self) Self
    asin(x Self) Self
    acos(x Self) Self
    atan(x Self) Self
    atan2(y Self, x Self) Self
    sinh(x Self) Self
    cosh(x Self) Self
    tanh(x Self) Self
    asinh(x Self) Self
    acosh(x Self) Self
    atanh(x Self) Self
    to_radians(self) Self
    to_degrees(self) Self
}

public trait FloatSpecial FloatingPoint {
    fma(x Self, mul Self, add Self) Self
    erf(x Self) Self
    erfc(x Self) Self
    tgamma(x Self) Self
    lgamma(x Self) Self
}

public trait Integer Numeric and Rem {
    wrapping_abs(self) Self
    pow(self, exp UInt) Self
    wrapping_pow(self, exp UInt) Self
    gcd(a Self, b Self) Self
    lcm(a Self, b Self) Self
    ilog2(x Self) UInt
    ilog10(x Self) UInt
}


