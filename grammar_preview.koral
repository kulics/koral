type [T Any]Array(mut source T raw_ref, mut len Int, mut cap Int) {
    new() Self = Array([T]make_raw_ref(0), 0);

    mut ref self.drop() = {
        if is_unique(self) then {
            for 0..self.source.len as i then {
                drop(self.source[i]);
            }
        }
    }

    ref self.size() Int = self.len;

    ref self.get(index Int) T = self.source[index];
    
    mut ref self.set(index Int, value T) Void = {
        make_sure_unique(self);
        self.source[index] = value;
    }

    mut ref self.insert(index Int, value T) Void = {
        make_sure_unique(self);
        ...
    }

    mut ref self.remove(index Int) Void = {
        make_sure_unique(self);
        ...
    }

    ref self.iterator() [T]ArrayIterator =
        [T]ArrayIterator(self, 0);
}

type [T Any]ArrayIterator(source [T]Array ref, mut index Int) {
    mut ref self.next() [T]Option = 
        if self.index < self.source.size() then {
            self.index += 1;
            Some(self.source[self.index])
        } else {
            None()
        }
}

type String(data [Rune]Array) {
    of(data [Rune]Array) Self = String(self.data);

    ref self.toString() Self = String(self.data);

    ref self.iterator() StringIterator = StringIterator(self, -1);
}

type StringIterator(_source String ref, mut index Int);

given StringIterator {
    mut ref self.next() [Rune]Option = 
        if self.index < self._source.data.size() then {
            self.index += 1;
            Some(self._source.data[self.index])
        } else {
            None()
        }
}

