let main() Int = {
    // Signed widths
    let a8 Int8 = 5
    let b8 Int8 = 7
    println(a8 + b8 == 12)

    let a16 Int16 = 1200
    let b16 Int16 = 300
    println(a16 - b16 == 900)

    let a32 Int32 = 10_000
    let b32 Int32 = 20_000
    println(a32 + b32 == 30_000)

    let a64 Int64 = 1_000_000
    let b64 Int64 = 2_000_000
    println(a64 + b64 == 3_000_000)

    // Unsigned widths (keep small values to avoid overflow)
    let ua UInt = 100
    let ub UInt = 23
    println(ua - ub == 77)

    let ua8 UInt8 = 200
    let ub8 UInt8 = 10
    println(ua8 - ub8 == 190)

    let ua16 UInt16 = 5000
    let ub16 UInt16 = 4000
    println(ua16 - ub16 == 1000)

    let ua32 UInt32 = 80_000
    let ub32 UInt32 = 20_000
    println(ua32 + ub32 == 100_000)

    let ua64 UInt64 = 1_000
    let ub64 UInt64 = 250
    println(ua64 - ub64 == 750)

    // Platform Int
    let x Int = 3
    let y Int = 4
    println(x * y == 12)

    yield 0
}
