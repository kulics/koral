// Test Range iterator functionality

let main() = {
    // Test iterating over ClosedRange
    let mut sum = 0
    for i = 1..5 then {
        sum = sum + i
    }
    assert(sum == 15, "ClosedRange iteration: 1+2+3+4+5 should be 15")
    
    // Test iterating over ClosedOpenRange
    sum = 0
    for i = 1..<5 then {
        sum = sum + i
    }
    assert(sum == 10, "ClosedOpenRange iteration: 1+2+3+4 should be 10")
    
    // Test iterating over OpenClosedRange
    sum = 0
    for i = 0<..5 then {
        sum = sum + i
    }
    assert(sum == 15, "OpenClosedRange iteration: 1+2+3+4+5 should be 15")
    
    // Test iterating over OpenRange
    sum = 0
    for i = 0<..<5 then {
        sum = sum + i
    }
    assert(sum == 10, "OpenRange iteration: 1+2+3+4 should be 10")
    
    // Test empty range iteration
    sum = 0
    for i = 5..4 then {
        sum = sum + i
    }
    assert(sum == 0, "Empty range should not iterate")
    
    // Test single element range
    sum = 0
    for i = 5..5 then {
        sum = sum + i
    }
    assert(sum == 5, "Single element range should iterate once")
    
    println("All range iterator tests passed!")
}
