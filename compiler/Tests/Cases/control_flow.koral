let ifExample(x Int, y Int) Int = {
    if x > y then {
        x
    } else if x < y then {
        y
    } else 0
};

let whileSum() Int = {
    let mut sum Int = 0;
    let mut i Int = 1;
    while i <= 10 then {
        sum = sum + i;
        i = i + 1;
    };
    sum
};

let shortCircuit(x Int) Int = {
    let a Bool = x > 0;
    let b Bool = x < 10;
    if a and b then {
        1
    } else if not a or b then {
        2
    } else {
        3
    }
};

let main() Int = {
    printString("if_greater:");
    printInt(ifExample(10, 5));
    
    printString("if_less:");
    printInt(ifExample(5, 20));
    
    printString("while_sum:");
    printInt(whileSum());
    
    printString("short_circuit_1:");
    printInt(shortCircuit(5)); // 1 (0 < 5 < 10)
    
    printString("short_circuit_2:");
    printInt(shortCircuit(0 - 5)); // 2 (-5 <= 0)
    
    printString("short_circuit_3:");
    printInt(shortCircuit(15)); // 3 (15 >= 10)
    
    0
}
