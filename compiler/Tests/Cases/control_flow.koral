let ifExample(x Int, y Int) Int = {
    yield if x > y then {
        yield x
    } else if x < y then {
        yield y
    } else 0
}

let whileSum() Int = {
    let mut sum Int = 0
    let mut i Int = 1
    while i <= 10 then {
        sum = sum + i
        i = i + 1
    }
    yield sum
}

let shortCircuit(x Int) Int = {
    let a Bool = x > 0
    let b Bool = x < 10
    yield if a and b then {
        yield 1
    } else if not a or b then {
        yield 2
    } else {
        yield 3
    }
}

let main() Int = {
    println("if_greater:")
    println(ifExample(10, 5))
    
    println("if_less:")
    println(ifExample(5, 20))
    
    println("while_sum:")
    println(whileSum())
    
    println("short_circuit_1:")
    println(shortCircuit(5))// 1 (0 < 5 < 10)
    
    println("short_circuit_2:")
    println(shortCircuit(0 - 5))// 2 (-5 <= 0)
    
    println("short_circuit_3:")
    println(shortCircuit(15))// 3 (15 >= 10)
    
    yield 0
}
