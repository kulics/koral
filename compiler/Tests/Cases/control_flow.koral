let ifExample(x Int, y Int) Int = {
    if x > y then {
        x
    } else if x < y then {
        y
    } else 0
}

let whileSum() Int = {
    let mut sum Int = 0
    let mut i Int = 1
    while i <= 10 then {
        sum = sum + i
        i = i + 1
    }
    sum
}

let shortCircuit(x Int) Int = {
    let a Bool = x > 0
    let b Bool = x < 10
    if a and b then {
        1
    } else if not a or b then {
        2
    } else {
        3
    }
}

let main() Int = {
    print_string("if_greater:")
    print_int(ifExample(10, 5))
    
    print_string("if_less:")
    print_int(ifExample(5, 20))
    
    print_string("while_sum:")
    print_int(whileSum())
    
    print_string("short_circuit_1:")
    print_int(shortCircuit(5))// 1 (0 < 5 < 10)
    
    print_string("short_circuit_2:")
    print_int(shortCircuit(0 - 5))// 2 (-5 <= 0)
    
    print_string("short_circuit_3:")
    print_int(shortCircuit(15))// 3 (15 >= 10)
    
    0
}
