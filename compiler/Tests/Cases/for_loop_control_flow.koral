// Test break and continue in for loops

// EXPECT: Break test:
// EXPECT: 1
// EXPECT: 2
// EXPECT: 3
// EXPECT: Continue test (skip evens):
// EXPECT: 1
// EXPECT: 3
// EXPECT: 5
// EXPECT: Nested break test:
// EXPECT: outer=1, inner stopped at 3
// EXPECT: outer=2, inner stopped at 3
// EXPECT: All control flow tests passed

let main() Void = {
    // Test 1: break exits the loop early
    println("Break test:")
    let mut list = [Int]List.new()
    list.push(1)
    list.push(2)
    list.push(3)
    list.push(4)
    list.push(5)
    
    for x in list then {
        if x > 3 then {
            break
        }
        println(x)
    }
    
    // Test 2: continue skips to next iteration
    println("Continue test (skip evens):")
    let mut list2 = [Int]List.new()
    list2.push(1)
    list2.push(2)
    list2.push(3)
    list2.push(4)
    list2.push(5)
    
    for x in list2 then {
        if x % 2 == 0 then {
            continue
        }
        println(x)
    }
    
    // Test 3: break in nested loop only exits inner loop
    println("Nested break test:")
    let mut outer = [Int]List.new()
    outer.push(1)
    outer.push(2)
    
    let mut inner = [Int]List.new()
    inner.push(1)
    inner.push(2)
    inner.push(3)
    inner.push(4)
    inner.push(5)
    
    for o in outer then {
        let mut lastInner = 0
        for i in inner then {
            if i > 3 then {
                break
            }
            lastInner = i
        }
        print("outer=")
        print(o)
        print(", inner stopped at ")
        println(lastInner)
    }
    
    println("All control flow tests passed")
}
