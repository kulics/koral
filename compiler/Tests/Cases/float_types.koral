let main() Int = {
    let a Float32 = 1.5
    let b Float32 = 2.5
    let sum32 Float32 = a + b
    let limit32 Float32 = 5.0
    print_line(sum32 < limit32)

    let c Float64 = 3.25
    let d Float64 = 4.75
    let sum64 Float64 = c + d
    let limit64 Float64 = 8.0
    print_line(sum64 == limit64)

    // Float64 classification
    let pos = 3.14
    let neg = -2.5
    let zero = 0.0
    let inf = 1.0 / 0.0
    let neg_inf = -1.0 / 0.0
    let nan_val = 0.0 / 0.0

    // is_finite
    if pos.is_finite() and neg.is_finite() and zero.is_finite() and not inf.is_finite() and not neg_inf.is_finite() and not nan_val.is_finite() then {
        print_line("f64_is_finite_ok")
    }

    // is_sign_positive / is_sign_negative
    if pos.is_sign_positive() and not pos.is_sign_negative() and neg.is_sign_negative() and not neg.is_sign_positive() and zero.is_sign_positive() then {
        print_line("f64_sign_ok")
    }

    // Float32 classification
    let pos32 Float32 = 1.5
    let neg32 Float32 = -1.5
    let zero32 Float32 = 0.0
    let inf32 Float32 = 1.0 / zero32
    let neg_inf32 Float32 = -1.0 / zero32

    if pos32.is_finite() and neg32.is_finite() and zero32.is_finite() and not inf32.is_finite() and not neg_inf32.is_finite() then {
        print_line("f32_is_finite_ok")
    }

    if pos32.is_sign_positive() and not pos32.is_sign_negative() and neg32.is_sign_negative() and not neg32.is_sign_positive() then {
        print_line("f32_sign_ok")
    }

    0
}
// EXPECT: true
// EXPECT: true
// EXPECT: f64_is_finite_ok
// EXPECT: f64_sign_ok
// EXPECT: f32_is_finite_ok
// EXPECT: f32_sign_ok
