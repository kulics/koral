// std.convert float parsing tests
// EXPECT: f64_basic_ok
// EXPECT: f64_negative_ok
// EXPECT: f64_sci_ok
// EXPECT: f64_nan_ok
// EXPECT: f64_inf_ok
// EXPECT: f64_neg_inf_ok
// EXPECT: f64_frac_only_ok
// EXPECT: error_empty_ok
// EXPECT: error_trailing_ok
// EXPECT: f32_basic_ok

using std.convert

let main() Int = {
    // Basic Float64 parse
    when Float64.parse("3.14") in {
        .Ok(f) then {
            // Check approximate value: 3.14 should be > 3.13 and < 3.15
            if f > 3.13 and f < 3.15 then println("f64_basic_ok")
            else println("FAIL f64_basic")
        },
        .Error(e) then println("FAIL f64_basic: " + e.message()),
    }

    // Negative float
    when Float64.parse("-2.5") in {
        .Ok(f) then {
            if f < (0.0 - 2.4) and f > (0.0 - 2.6) then println("f64_negative_ok")
            else println("FAIL f64_negative")
        },
        .Error(e) then println("FAIL f64_negative: " + e.message()),
    }

    // Scientific notation
    when Float64.parse("1.5e2") in {
        .Ok(f) then {
            if f > 149.0 and f < 151.0 then println("f64_sci_ok")
            else println("FAIL f64_sci")
        },
        .Error(e) then println("FAIL f64_sci: " + e.message()),
    }

    // NaN
    when Float64.parse("NaN") in {
        .Ok(f) then {
            if f.is_nan() then println("f64_nan_ok")
            else println("FAIL f64_nan")
        },
        .Error(e) then println("FAIL f64_nan: " + e.message()),
    }

    // Inf
    when Float64.parse("Inf") in {
        .Ok(f) then {
            if f.is_inf() then println("f64_inf_ok")
            else println("FAIL f64_inf")
        },
        .Error(e) then println("FAIL f64_inf: " + e.message()),
    }

    // -Inf
    when Float64.parse("-Inf") in {
        .Ok(f) then {
            if f.is_inf() and f.is_sign_negative() then println("f64_neg_inf_ok")
            else println("FAIL f64_neg_inf")
        },
        .Error(e) then println("FAIL f64_neg_inf: " + e.message()),
    }

    // Fractional only (.5)
    when Float64.parse(".5") in {
        .Ok(f) then {
            if f > 0.49 and f < 0.51 then println("f64_frac_only_ok")
            else println("FAIL f64_frac_only")
        },
        .Error(e) then println("FAIL f64_frac_only: " + e.message()),
    }

    // Error: empty string
    when Float64.parse("") in {
        .Ok(f) then println("FAIL error_empty"),
        .Error(e) then println("error_empty_ok"),
    }

    // Error: trailing characters
    when Float64.parse("3.14abc") in {
        .Ok(f) then println("FAIL error_trailing"),
        .Error(e) then println("error_trailing_ok"),
    }

    // Float32 basic
    when Float32.parse("2.5") in {
        .Ok(f) then {
            if (Float64)f > 2.4 and (Float64)f < 2.6 then println("f32_basic_ok")
            else println("FAIL f32_basic")
        },
        .Error(e) then println("FAIL f32_basic: " + e.message()),
    }

    yield 0
}
