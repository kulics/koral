// Comprehensive test for Stream API

let test_filter_map() Void = {
    let mut list = [Int]List.new()
    list.push_back(1)
    list.push_back(2)
    list.push_back(3)
    list.push_back(4)
    list.push_back(5)
    
    // Test filter (eager)
    let filtered = list.filter((x) -> x > 2)
    if not {filtered.count() == 3} then { panic("filter count failed"); }
    if not {filtered[0] == 3} then { panic("filter[0] failed"); }
    
    // Test map (eager)
    let mapped = list.[Int]map((x) -> x * 2)
    if not {mapped.count() == 5} then { panic("map count failed"); }
    if not {mapped[0] == 2} then { panic("map[0] failed"); }
    if not {mapped[4] == 10} then { panic("map[4] failed"); }
    
    print_line("test_filter_map passed")
}

let test_stream_terminal_ops() Void = {
    let mut list = [Int]List.new()
    list.push_back(1)
    list.push_back(2)
    list.push_back(3)
    list.push_back(4)
    list.push_back(5)
    
    // Test any - using stream() function with explicit type params
    if not [Int, [Int]ListIterator, [Int]List]stream(list).any((x) -> x > 3) then { panic("any failed"); }
    
    // Test all
    if not [Int, [Int]ListIterator, [Int]List]stream(list).all((x) -> x > 0) then { panic("all failed"); }
    
    // Test none
    if not [Int, [Int]ListIterator, [Int]List]stream(list).none((x) -> x > 10) then { panic("none failed"); }
    
    // Test position
    when [Int, [Int]ListIterator, [Int]List]stream(list).position((x) -> x == 3) is {
        .Some(pos) then {
            if not {pos == 2} then { panic("position value failed"); }
        },
        .None then { panic("position failed"); },
    }
    
    // Test is_empty
    let mut empty_list = [Int]List.new()
    if not [Int, [Int]ListIterator, [Int]List]stream(empty_list).is_empty() then { panic("is_empty failed"); }
    
    print_line("test_stream_terminal_ops passed")
}

