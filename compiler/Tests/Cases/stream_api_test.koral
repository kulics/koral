let test_stream_intermediate_ops() Void = {
    let mut list = [Int]List.new()
    list.push_back(1)
    list.push_back(2)
    list.push_back(3)
    list.push_back(4)
    list.push_back(5)
    
    // Test stream filter + to_list
    let filtered = [Int, [Int]ListIterator, [Int]List]stream(list).filter((x) -> x > 2).to_list()
    if not {filtered.count() == 3} then { panic("stream filter count failed"); }
    if not {filtered[0] == 3} then { panic("stream filter[0] failed"); }
    
    // Test stream map + to_list
    let mapped = [Int, [Int]ListIterator, [Int]List]stream(list).[Int]map((x) -> x * 2).to_list()
    if not {mapped.count() == 5} then { panic("stream map count failed"); }
    if not {mapped[0] == 2} then { panic("stream map[0] failed"); }
    
    // Test stream take + to_list
    let taken = [Int, [Int]ListIterator, [Int]List]stream(list).take(3).to_list()
    if not {taken.count() == 3} then { panic("stream take count failed"); }
    if not {taken[2] == 3} then { panic("stream take[2] failed"); }
    
    // Test stream skip + to_list
    let skipped = [Int, [Int]ListIterator, [Int]List]stream(list).skip(2).to_list()
    if not {skipped.count() == 3} then { panic("stream skip count failed"); }
    if not {skipped[0] == 3} then { panic("stream skip[0] failed"); }
    
    // Test chained operations: filter + map + to_list
    let chained = [Int, [Int]ListIterator, [Int]List]stream(list).filter((x) -> x > 1).[Int]map((x) -> x * 10).to_list()
    if not {chained.count() == 4} then { panic("chained count failed"); }
    if not {chained[0] == 20} then { panic("chained[0] failed"); }
    if not {chained[3] == 50} then { panic("chained[3] failed"); }
    
    print_line("test_stream_intermediate_ops passed")
}

let test_stream_fold_reduce() Void = {
    let mut list = [Int]List.new()
    list.push_back(1)
    list.push_back(2)
    list.push_back(3)
    list.push_back(4)
    list.push_back(5)
    
    // Test fold - sum
    let sum = [Int, [Int]ListIterator, [Int]List]stream(list).[Int]fold(0, (acc, x) -> acc + x)
    if not {sum == 15} then { panic("fold sum failed"); }
    
    // Test reduce - sum
    when [Int, [Int]ListIterator, [Int]List]stream(list).reduce((acc, x) -> acc + x) is {
        .Some(s) then {
            if not {s == 15} then { panic("reduce sum value failed"); }
        },
        .None then { panic("reduce failed"); },
    }
    
    print_line("test_stream_fold_reduce passed")
}

let test_map_keys_values() Void = {
    let mut m = [Int, String]Map.new()
    m.insert(1, "one");
    m.insert(2, "two");
    m.insert(3, "three");
    
    // Test keys
    let keys = m.keys()
    let mut key_it = keys.iterator()
    let mut key_count = 0
    while key_it.next() is .Some(_) then {
        key_count += 1
    }
    if not {key_count == 3} then { panic("keys count failed"); }
    
    // Test values
    let values = m.values()
    let mut val_it = values.iterator()
    let mut val_count = 0
    while val_it.next() is .Some(_) then {
        val_count += 1
    }
    if not {val_count == 3} then { panic("values count failed"); }
    
    print_line("test_map_keys_values passed")
}

let test_string_iterators() Void = {
    // Test split
    let s = "a,b,c"
    let split = s.split(",")
    let mut it = split.iterator()
    let mut count = 0
    while it.next() is .Some(_) then {
        count += 1
    }
    if not {count == 3} then { panic("split count failed"); }
    
    // Test lines
    let lines_str = "line1\nline2\nline3"
    let lines = lines_str.lines()
    let mut lit = lines.iterator()
    let mut line_count = 0
    while lit.next() is .Some(_) then {
        line_count += 1
    }
    if not {line_count == 3} then { panic("lines count failed"); }
    
    // Test split_ascii_whitespace
    let ws_str = "  a  b  c  "
    let ws = ws_str.split_ascii_whitespace()
    let mut wit = ws.iterator()
    let mut ws_count = 0
    while wit.next() is .Some(_) then {
        ws_count += 1
    }
    if not {ws_count == 3} then { panic("split_ascii_whitespace count failed"); }
    
    print_line("test_string_iterators passed")
}

