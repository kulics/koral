// EXPECT: loop_sum:
// EXPECT: 23
// EXPECT: early1:
// EXPECT: 1
// EXPECT: early2:
// EXPECT: 2

let early(x Int) Int = {
    if x > 0 then {
        return 1
    }
    yield 2
}

let loopSum() Int = {
    let mut i Int = 0
    let mut sum Int = 0
    while i < 10 then {
        i = i + 1
        if i == 5 then { continue; }
        if i == 8 then { break; }
        sum = sum + i
    }
    yield sum
}

let main() Int = {
    println("loop_sum:")
    println(loopSum())

    println("early1:")
    println(early(1))

    println("early2:")
    println(early(0 - 1))

    yield 0
}
