// Test case for recursive union with generic type
// EXPECT: Test passed!

public type Expr {
    Number(value Int),
    BinaryOp(left Expr ref, right Expr ref),
    FunctionCall(name String, args [Expr ref]List),
}

public let parse() [Expr ref]Result = {
    let expr = ref Expr.Number(42)
    yield [Expr ref]Result.Ok(expr)
}

public let main() Void = {
    when parse() in {
        .Ok(expr) then println("Test passed!"),
        .Error(msg) then println(msg.message()),
    }
}
