// EXPECT: newline semicolon continuation ok

let main() Int = {
    // Infix continuation: next line starts with infix operator
    let x = 1
        + 2
    print_line(x)

    // Dot-chaining continuation: next line starts with '.'
    let n = "abc"
        .count_byte()
    print_line(n)

    // Statement termination at block end + newline
    if true then { print_line(1) }
    print_line(2)

    print_line("newline semicolon continuation ok")
    0
}
