let main() Int = {
    // Infix continuation: next line starts with infix operator
    let x = 1
        + 2
    print_int(x)

    // Dot-chaining continuation: next line starts with '.'
    let n = "abc"
        .count_byte()
    print_int(n)

    // Statement termination at block end + newline
    if true then { print_int(1) }
    print_int(2)

    print_string("newline semicolon continuation ok")
    0
}
