foreign type Timespec(tv_sec Int64, tv_nsec Int64)

let test_ffi_struct() Bool = {
    let ts = Timespec((Int64)1, (Int64)500_000_000)
    assert(ts.tv_sec == (Int64)1)
    assert(ts.tv_nsec == (Int64)500_000_000)

    let p = ptr ts
    assert(p.tv_sec == (Int64)1)

    true
}

let main() Int = {
    assert(test_ffi_struct())
    0
}
