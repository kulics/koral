// Test basic type alias functionality
// EXPECT: meters_test:
// EXPECT: 42
// EXPECT: alias_chain:
// EXPECT: 100
// EXPECT: alias_struct:
// EXPECT: 10
// EXPECT: alias_func_param:
// EXPECT: 7

// Basic type alias
type Meters = Int

// Alias chain: A -> B -> Int
type Distance = Meters

// Struct for testing
type Point(x Int, y Int)

// Alias to struct
type Coord = Point

// Alias used in function parameter and return type
let add_meters(a Meters, b Meters) Meters = a + b

let main() Int = {
    // Use alias for variable
    let m Meters = 42
    println("meters_test:")
    println(m)

    // Use alias chain
    let d Distance = 100
    println("alias_chain:")
    println(d)

    // Use alias to struct
    let c = Coord(10, 20)
    println("alias_struct:")
    println(c.x)

    // Use alias in function
    let result = add_meters(3, 4)
    println("alias_func_param:")
    println(result)

    yield 0
}
