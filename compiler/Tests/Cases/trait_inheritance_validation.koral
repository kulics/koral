// Tests for inherited trait constraint validation
// EXPECT-ERROR: does not conform to trait Comparable

// Type with only Equatable (not Comparable)
type OnlyEquatable(x Int)

given OnlyEquatable {
    __equals(self ref, other OnlyEquatable ref) Bool = self.x == other.x
}

// Generic function requiring Comparable (which inherits from Equatable)
let [T Comparable]find_max(a T, b T) T = if a > b then a else b

let main() Int = {
    let a = OnlyEquatable(1)
    let b = OnlyEquatable(2)
    // This should fail because OnlyEquatable doesn't implement Comparable
    let result = find_max(a, b)
    0
}
