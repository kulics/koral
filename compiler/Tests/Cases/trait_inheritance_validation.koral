// Tests for inherited trait constraint validation
// EXPECT-ERROR: does not conform to trait Ord

// Type with only Eq (not Ord)
type OnlyEquatable(x Int)

given OnlyEquatable {
    equals(self, other OnlyEquatable) Bool = self.x == other.x
}

// Generic function requiring Ord (which inherits from Eq)
let [T Ord]find_max(a T, b T) T = if a > b then a else b

let main() Int = {
    let a = OnlyEquatable(1)
    let b = OnlyEquatable(2)
    // This should fail because OnlyEquatable doesn't implement Ord
    let result = find_max(a, b)
    0
}
