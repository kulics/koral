// program_a.koral - First independent program using shared utilities

using "shared_utils"

public let main() Void = {
    let sum = add(10, 20)
    check_assert(sum == 30, "add should work")
    
    let product = multiply(5, 6)
    check_assert(product == 30, "multiply should work")
    
    let p = create_point(3, 4)
    check_assert(p.x == 3, "point x should be 3")
    check_assert(p.y == 4, "point y should be 4")
    
    print("Program A: All tests passed!")
}

let check_assert(condition Bool, message String) Void = {
    if not condition then {
        print("ASSERTION FAILED: ")
        print(message)
    }
}
