// program_b.koral - Second independent program using shared utilities

using ..."./shared_utils"

public let main() Void = {
    // Use the same shared utilities but with different values
    let sum = add(100, 200)
    check_assert(sum == 300, "add should work with larger numbers")
    
    let product = multiply(7, 8)
    check_assert(product == 56, "multiply should work")
    
    let p = create_point(10, 20)
    check_assert(p.x == 10, "point x should be 10")
    check_assert(p.y == 20, "point y should be 20")
    
    print("Program B: All tests passed!")
}

let check_assert(condition Bool, message String) Void = {
    if not condition then {
        print("ASSERTION FAILED: ")
        print(message)
    }
}
