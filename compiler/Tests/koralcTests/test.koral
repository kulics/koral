let shortCircuit(x: Int): Int = {
    let a: Bool = x > 0;
    let b: Bool = x < 10;
    if a and b then {
        1
    } else if not a or b then {
        2
    } else {
        3
    }
};

let conditionExample(x: Int, y: Int): Int = {
    if x > 0 and y > 0 then {
        1
    } else if not x < 0 or y == 0 then {
        2
    } else {
        3
    }
};

