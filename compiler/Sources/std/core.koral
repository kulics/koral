    public next(self ref) [[K, V]MapItem]Option = {
        while true then {
            when self.current is {
                .Some(nref) then {
                    let node = deref nref;
                    self.current = node.next_node;
                    return [[K, V]MapItem]Option.Some([K, V]MapItem(node.key, node.value));
