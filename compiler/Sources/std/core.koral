        let old_buckets = self.buckets;
        let old_cap = self.cap;
        let old_len = self.len;

        self.buckets = new_set.buckets;
        self.cap = new_set.cap;
        self.len = new_set.len;

        new_set.buckets = old_buckets;
        new_set.cap = old_cap;
        new_set.len = old_len;
    };

    private bucket_index_for_hash(self ref, hash UInt, cap Int) Int = {
        let capU UInt = (UInt)cap;
        let div = hash / capU;
        let m UInt = hash - div * capU;
        (Int)m
    };
};

given[T HashKey] [T]SetIterator {
    public next(self ref) [T]Option = {
        while true then {
            when self.current is {
                .Some(nref) then {
                    let node = deref nref;
                    self.current = node.next_node;
                    return [T]Option.Some(node.value);
                };
                .None then {
                    if self.bucket >= self.source.cap then { return [T]Option.None(); };
                    let head = deref self.source.buckets.offset(self.bucket).peek();
                    self.bucket = self.bucket + 1;
                    self.current = head;
                }
            }
        }
    };
};

public let [T Comparable]max(a T, b T) T = if a > b then a else b;
public let [T Comparable]min(a T, b T) T = if a < b then a else b;