// ---------------- Traits (v1) ----------------

public trait Equatable {
    equals(self, other Self) Bool;
};

public trait Comparable Equatable {
    compare(self, other Self) Int;
};

public let [T Comparable]max(a T, b T) T = if a.compare(b) > 0 then a else b;
public let [T Comparable]min(a T, b T) T = if a.compare(b) < 0 then a else b;