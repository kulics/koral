given[K HashKey, V Copy] [K, V]Map {
    public new() Self = [K, V]Map.with_capacity(16);

    public with_capacity(capacity Int) Self = {
        let mut cap = capacity;
        if cap < 16 then { cap = 16; };

        let buckets = [[[K, V]MapNode ref]Option]alloc_memory(cap);
        let mut i = 0;
        while i < cap then {
            buckets.offset(i).init([[K, V]MapNode ref]Option.None());
            i += 1;
        };
        [K, V]Map(buckets, cap, 0)
    };

    // Drop buckets and all nodes.
    __drop(self ref) = {
        let mut i = 0;
        while i < self.cap then {
            self.buckets.offset(i).deinit();
            i += 1;
        };
        dealloc_memory(self.buckets);
    };

    public copy(self ref) Self = {
        let mut out = [K, V]Map.with_capacity(self.cap);
        let mut it = self.iterator();
        while true then {
            when it.next() is {
                .Some(item) then { out.insert(item.key, item.value); };
                .None then { break; }
            }
        };
        out
    };

    public count(self ref) Int = self.len;
    public capacity(self ref) Int = self.cap;
    public is_empty(self ref) Bool = self.len == 0;

    public clear(self ref) Void = {
        let mut i = 0;
        while i < self.cap then {
            let ptr = self.buckets.offset(i);
            let old = ptr.take();
            // dropping `old` releases the chain
            ptr.init([[K, V]MapNode ref]Option.None());
            i += 1;
        };
        self.len = 0;
    };

    public reserve(self ref, additional Int) Void = {
        if additional <= 0 then { return; };
        self.ensure_capacity(self.len + additional);
    };

    public contains_key(self ref, key K) Bool = {
        let h = key.hash();
        let idx = self.bucket_index(h);
        let mut cur = deref self.buckets.offset(idx).peek();
        while true then {
            when cur is {
                .Some(nref) then {
                    let node = deref nref;
                    if node.key == key then { return true; };
                    cur = node.next_node;
                };
                .None then { return false; }
            }
        }
    };

    public get(self ref, key K) [V]Option = {
        let h = key.hash();
        let idx = self.bucket_index(h);
        let mut cur = deref self.buckets.offset(idx).peek();
        while true then {
            when cur is {
                .Some(nref) then {
                    let node = deref nref;
                    if node.key == key then { return [V]Option.Some(node.value); };
                    cur = node.next_node;
                };
                .None then { return [V]Option.None(); }
            }
        }
    };

    // Overwrite semantics:
    // - returns true if a new key was inserted
    // - returns false if an existing key was overwritten
    public insert(self ref, key K, value V) Bool = {
        self.ensure_capacity(self.len + 1);

        let h = key.hash();
        let idx = self.bucket_index(h);
        let bucket_ptr = self.buckets.offset(idx);

        let mut cur = deref bucket_ptr.peek();
        while true then {
            when cur is {
                .Some(nref) then {
                    let node = deref nref;
                    if node.key == key then {
                        node.value = value;
                        return false;
                    };
                    cur = node.next_node;
                };
                .None then { break; }
            }
        };

        // Insert new node at head
        let head = bucket_ptr.take();
        let new_node = ref [K, V]MapNode(h, key, value, head);
        bucket_ptr.init([[K, V]MapNode ref]Option.Some(new_node));
        self.len = self.len + 1;
        true
    };

    public remove(self ref, key K) [V]Option = {
        let h = key.hash();
        let idx = self.bucket_index(h);
        let bucket_ptr = self.buckets.offset(idx);
        let mut head = deref bucket_ptr.peek();

        when head is {
            .None then { return [V]Option.None(); };
            .Some(nref) then {
                let node = deref nref;
                if node.key == key then {
                    let next = node.next_node;
                    bucket_ptr.replace(next);
                    self.len = self.len - 1;
                    return [V]Option.Some(node.value);
                };
                let mut prev = nref;
                let mut cur = node.next_node;
                while true then {
                    when cur is {
                        .Some(cref) then {
                            let cnode = deref cref;
                            if cnode.key == key then {
                                let next = cnode.next_node;
                                deref prev . next_node = next;
                                self.len = self.len - 1;
                                return [V]Option.Some(cnode.value);
                            };
                            prev = cref;
                            cur = cnode.next_node;
                        };
                        .None then { return [V]Option.None(); }
                    }
                }
            }
        }
    };

    public iterator(self ref) [K, V]MapIterator = [K, V]MapIterator(self, 0, [[K, V]MapNode ref]Option.None());

    private bucket_index(self ref, hash UInt) Int = {
        let capU UInt = (UInt)self.cap;
        let div = hash / capU;
        let m UInt = hash - div * capU;
        (Int)m
    };

    private ensure_capacity(self ref, min_entries Int) Void = {
        let mut limit = self.cap * 3 / 4; // load factor 0.75
        if limit == 0 then { limit = 1; };
        if min_entries <= limit then { return; };

        let mut new_cap = self.cap * 2;
        if new_cap < 16 then { new_cap = 16; };
        while min_entries > new_cap * 3 / 4 then {
            new_cap = new_cap * 2;
        };
        self.rehash_into(new_cap);
    };

    private rehash_into(self ref, new_cap Int) Void = {
        let mut new_map = [K, V]Map.with_capacity(new_cap);
        let mut it = self.iterator();
        while true then {
            when it.next() is {
                .Some(item) then { new_map.insert(item.key, item.value); };
                .None then { break; }
            }
        };

        let old_buckets = self.buckets;
        let old_cap = self.cap;
        let old_len = self.len;

        self.buckets = new_map.buckets;
        self.cap = new_map.cap;
        self.len = new_map.len;

        new_map.buckets = old_buckets;
        new_map.cap = old_cap;
        new_map.len = old_len;
    };

    private bucket_index_for_hash(self ref, hash UInt, cap Int) Int = {
        let capU UInt = (UInt)cap;
        let div = hash / capU;
        let m UInt = hash - div * capU;
        (Int)m
    };
};

