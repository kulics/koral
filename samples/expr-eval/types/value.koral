// 表达式求值器 - Value 类型定义

public type Value {
    IntVal(value Int),
    FloatVal(value Float64),
}

given Value {
    public to_float(self) Float64 = when self is {
        .IntVal(v) then (Float64)v,
        .FloatVal(v) then v,
    }

    public is_int(self) Bool = when self is {
        .IntVal(_) then true,
        .FloatVal(_) then false,
    }

    public to_string(self) String = when self is {
        .IntVal(v) then v.to_string(),
        .FloatVal(v) then v.to_string(),
    }
}
